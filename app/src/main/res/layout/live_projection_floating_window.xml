<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mRootFloat"
    android:layout_width="84dp"
    android:layout_height="42dp"
    android:background="@drawable/live_projection_float_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/mIvFloatBackToApp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:src="@drawable/icon_live_float_back_to_app" />

    <ImageView
        android:id="@+id/mIvFloatStopSharing"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:src="@drawable/icon_live_float_stop_share" />
</LinearLayout>
